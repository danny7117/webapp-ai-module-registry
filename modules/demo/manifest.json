{
  "id": "demo.echo",
  "name": "Demo Echo",
  "version": "1.0.0",
  "capabilities": ["events.trigger", "fx.overlay", "schedule"],
  "inputs": {
    "text": { "type": "string", "minLength": 1 }
  },
  "outputs": {
    "echo": { "type": "string" }
  },
  "resources": { "bundle_kb": 8, "cpu": 0.05, "mem_mb": 8 },
  "policy": { "age": "6+", "license": "MIT", "offline_ok": true },
  "tests": [
    {
      "name": "returns echo",
      "input": { "text": "hi" },
      "expect": { "echo": "hi" }
    }
  ]
}
